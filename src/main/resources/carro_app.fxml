<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.tarefa3.CarrosController">

    <!-- Campos de entrada para o cadastro de carros -->
    <Label layoutX="30" layoutY="20" text="Cadastro de Carros"/>

    <!-- Campo Marca -->
    <Label layoutX="30" layoutY="60" text="Marca"/>
    <TextField fx:id="marcaField" layoutX="100" layoutY="60" promptText="Digite a marca"/>

    <!-- Campo Modelo -->
    <Label layoutX="30" layoutY="100" text="Modelo"/>
    <TextField fx:id="modeloField" layoutX="100" layoutY="100" promptText="Digite o modelo"/>

    <!-- Campo Ano -->
    <Label layoutX="30" layoutY="140" text="Ano"/>
    <TextField fx:id="anoField" layoutX="100" layoutY="140" promptText="Digite o ano"/>

    <!-- Botão de Salvar -->
    <Button layoutX="100" layoutY="180" text="Salvar" onAction="#salvarCarro"/>

    <!-- Tabela para listar os carros cadastrados -->
    <TableView fx:id="tabelaCarros" layoutX="30" layoutY="220" prefHeight="200" prefWidth="340">
        <columns>
            <TableColumn fx:id="colunaMarca" prefWidth="100" text="Marca"/>
            <TableColumn fx:id="colunaModelo" prefWidth="100" text="Modelo"/>
            <TableColumn fx:id="colunaAno" prefWidth="100" text="Ano"/>
        </columns>
    </TableView>

    <!-- Botão de Voltar para o Menu -->
    <Button layoutX="280" layoutY="430" text="Voltar" onAction="#voltarMenu"/>
</AnchorPane>
